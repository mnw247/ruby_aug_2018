<div class="container">
    <div class="text-right">
        <a href="/bright_ideas">Bright Ideas</a>
    </div>

    <h1 class="text-primary"><%= @post.user.first_name %> says: <span class="text-danger"><%= @post.content %></span></h1>

    <h3>People who liked this post:</h3>
    <table class="table table-striped table-bordered table-sm" id="dtTable1" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">Alias
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th class="th-sm">Name
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
            </tr>
        </thead>
        <tbody>
        <% if @user %>
            <% @user.each do |u| %>
                <tr>
                    <td><a href="/users/<%= u.id %>"><%= u.first_name %></td>
                    <td><%= u.first_name %> <%= u.last_name %></td>
                </tr>
            <%end%>
        <%end%>
        </tbody>
    </table>
</div>