<div class="container">
    <h2><%= @user.first_name %> <%= @user.last_name %>'s Playlist</h2>
    <table class="table table-striped table-bordered table-sm" id="dtTable1" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">Artist
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th class="th-sm">Title
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th class="th-sm">No. of Times Song Has Been Added
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
            </tr>
        </thead>
        <tbody>
        <% if @songs %>
            <% @songs.each do |song| %>
            <tr>
                <td><%=song.artist%></td>
                <td>
                    <a href="/songs/<%=song.id%>"><%=song.title%></a>
                </td>
                <td><%= song.playlists.where(user_id: @user.id).count %></td>
            </tr>
            <% end %>
        <% end %>
        </tbody>
    </table>
</div>