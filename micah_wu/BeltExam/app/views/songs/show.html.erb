<div class="container">
    <h1><a href="/songs/">DASHBOARD</a></h1>
    <h4>Others who added <%=@song.artist%> - <%=@song.title%></h4>
    <table class="table table-striped table-bordered table-sm" id="dtTable1" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">NAME
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th class="th-sm">TIMES ADDED
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td>
                    <a href="/users/<%=user.id%>"><%=user.first_name%> <%=user.last_name%></a>
                </td>
                <td><%=user.playlists.where(song_id: @song.id).count%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>