<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="container">
    <div class="row">
        <div class="col text-left">
            <h1>Dojo:</h1>
            <h3>Address:</h3>
            <h3>City:</h3>
            <h3>State:</h3>
        </div>
        <div class="col-10 text-left text-success">
            <h1><%= @dojo.branch %></h1>
            <h3><%= @dojo.street %></h3>
            <h3><%= @dojo.city %></h3>
            <h3><%= @dojo.state %></h3>
        </div>
    </div>
    <div class="col text-right">
        <h1><a href="/dojos/<%= @dojo.id %>/edit">Edit Dojos</a></h1>
    </div>
    <div class="row">
        <div class="col">
            <div class="text-left text-danger">
                <h5>Student Roster</h5>
            </div>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @students.each do |student|%>
                    <tr>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                    <td><%= link_to 'Show', dojo_student_path(@dojo, student.id) %></td>
                    <td><%= link_to 'Edit', dojo_student_path(@dojo, student.id) %></td>
                    <td><%= link_to 'Destroy', dojo_student_path(@dojo, student.id) %></td>
                    </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col text-left">
            <a href="/">Home</a>
        </div>
        <div class="col text-right">
            <a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>
        </div>
    </div>
</div>
