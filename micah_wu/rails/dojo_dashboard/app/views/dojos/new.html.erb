<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="container">
<h1>New Dojo</h1>
<% if flash[:notice] %>
  <% flash[:notice].each do |message| %>
    <p class="text-danger"><%= message %></p>
  <%end%>
<%end%>
<form action="/dojos" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="branch">Branch: </label>
    <input name="dojo[branch]" type="text" class="form-control" id="branch" aria-describedby="branch" placeholder="Enter branch">
  </div>
   <div class="form-group">
    <label for="street">Street: </label>
    <input name="dojo[street]" type="text" class="form-control" id="street" aria-describedby="street" placeholder="Enter street">
  </div>
  <div class="form-group">
    <label for="city">City: </label>
    <input name="dojo[city]" type="text" class="form-control" id="city" aria-describedby="city" placeholder="Enter city">
  </div>
  <div class="form-group">
    <label for="state">State: </label>
    <input name="dojo[state]" type="text" class="form-control" id="state" aria-describedby="state" placeholder="Enter state">
  </div>
<button class="btn btn-small btn-primary">Submit</button>  
</form>
</div>