<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="container">
<h1>Edit Student</h1>
<% if flash[:notice] %>
  <% flash[:notice].each do |message| %>
    <p class="text-danger"><%= message %></p>
  <%end%>
<%end%>
<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">
        <div class="form-group">
            <label>First Name: </label>
            <input name="student[first_name]" type="text" class="form-control" value="<%= @student.first_name %>">
        </div>
        <div class="form-group">
            <label>Last Name: </label>
            <input name="student[last_name]" type="text" class="form-control" value="<%= @student.last_name %>">
        </div>
        <div class="form-group">
            <label>Email Address: </label>
            <input name="student[email]" type="text" class="form-control" value="<%= @student.email %>">
        </div>
        <div class="form-group">
            <label>Dojo: </label>
            <select>
            <input name="student[dojo_id]" type="text" class="form-control" value="<%= @student.dojo_id %>">
            <input name="student[dojo_id]" type="text" class="form-control" value="<%= @student.dojo_id %>">
            </select>
        </div>
    <button class="btn btn-small btn-primary">Update</button>  
</form>
<a href="/">Home</a>
<a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>/new"><%= @student.first_name %></a>
</div>